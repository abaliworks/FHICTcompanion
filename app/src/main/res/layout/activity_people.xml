<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PeopleActivity">

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="108dp" />
    <EditText
        android:id="@+id/etsearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="search name"
        android:inputType="text"
        android:imeOptions="actionSend" />
    <ImageView
        android:id="@+id/peepImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/peepDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Name"
        />
    <TextView
        android:id="@+id/peepFhictId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FHICT ID"/>
        />
    <TextView
        android:id="@+id/peepOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Office number"/>
        />
    <TextView
        android:id="@+id/peepEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="E-Mail"/>
        />
    <TextView
        android:id="@+id/peepTelephoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Telephone Number"/>
        />


</LinearLayout>